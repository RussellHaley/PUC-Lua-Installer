<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
		<DirectoryRef Id="TARGETDIR">
			<Directory Id="ProgramFilesFolder" Name="PUC-Lua">
				<Directory Id="INSTALLDIR" Name="PUC-Lua">
					<Directory Id="LUAVERSIONDIR" Name="%version%">
						<Directory Id="LUABIN64DIR" Name="bin64"/>
						<!--<Directory Id="LUABIN64DIR" Name="bin32"/>-->
						<Directory Id="LUAINCLUDEDIR" Name="include"/>
						<Directory Id="LUASOURCEDIR" Name="src"/>
					</Directory>
				</Directory>
			</Directory>
			 <Directory Id="ProgramMenuFolder">
                <Directory Id="ApplicationProgramsFolder" Name="PUC-Lua"/>
            </Directory>
		</DirectoryRef>
	
		<DirectoryRef Id="LUABIN64DIR">
			%binary64_dir%
		</DirectoryRef>
<!--		<DirectoryRef Id="LUABIN32DIR">
			%binary32_dir%
		</DirectoryRef>-->
		<DirectoryRef Id="LUAINCLUDEDIR">
			%luainclude_dir%
		</DirectoryRef>
		<DirectoryRef Id="LUASOURCEDIR">
			%luasource_dir%
		</DirectoryRef>

		<DirectoryRef Id="ApplicationProgramsFolder">
			<Component Id="ApplicationShortcut" Guid="bedbf7eb-ae81-49cd-b84b-7673cdc7ce69">
				<Shortcut Id="ApplicationStartMenuShortcut"
				          Name="Lua %version%"
				          Description="PUC-Lua Interpreter"
				          Target="[#lua.exe]"
				          WorkingDirectory="LUABINDIR">
				</Shortcut>
				<RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
				<RegistryValue Root="HKCU" Key="Software\Microsoft\PUC-Lua-%version%" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
			</Component>
		</DirectoryRef>
</Fragment>
</Wix>
